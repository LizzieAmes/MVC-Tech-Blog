<h1>Dashboard</h1>
{{#each posts}}
    <div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <button class="edit-btn" data-id="{{this.id}}">Edit</button>
    <button class="delete-btn" data-id="{{this.id}}">Delete</button>
</div>
{{else}}
    <p>No posts yet.</p>
{{/each}}
<a href="/posts/new">Create New Post</a>
